#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Hi! Welcome to Command Line Tic Tac Toe! Would you like to play? (y/n)"

game = Game.new	

input = gets.strip.downcase 
if input == "y" 
Game.new.play 
elsif input == "n" 
puts "Thank You And See You Around" 
else 
input == " "
puts "Enter(y/n)"
end